{
  "eslint.enable": true,
  "eslint.validate": ["javascript", "typescript"],
  "prettier.enable": true,
  "prettier.requireConfig": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "files.associations": {
    "*.qvs": "sql"
  },
  "playwright.searchForTests": true,
  "playwright.showTrace": true,
  "json.schemas": [
    {
      "fileMatch": ["src/meta.json"],
      "schema": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "version": { "type": "string" },
          "author": { "type": "string" }
        },
        "required": ["name", "description", "version"]
      }
    }
  ],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "files.exclude": {
    "**/dist/**": true,
    "**/*-ext/**": true,
    "**/node_modules/**": true,
    "**/test/artifacts/**": true,
    "**/test/report/**": true
  },
  "search.exclude": {
    "**/dist/**": true,
    "**/*-ext/**": true,
    "**/node_modules/**": true,
    "**/test/artifacts/**": true,
    "**/test/report/**": true
  }
}
